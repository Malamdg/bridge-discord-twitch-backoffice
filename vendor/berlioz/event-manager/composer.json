{
  "name": "berlioz/event-manager",
  "description": "PHP event manager/dispatcher, respecting PSR-14 (Event Dispatcher) standard.",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",
  "homepage": "https://getberlioz.com",
  "authors": [
    {
      "name": "Ronan Giron",
      "email": "ronan@getberlioz.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Berlioz\\EventManager\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Berlioz\\EventManager\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.0",
    "psr/event-dispatcher": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.3"
  },
  "provide": {
    "psr/event-dispatcher-implementation": "^1.0"
  }
}
